<?xml version="1.0" encoding="UTF-8"?>
<project name="teamninenewbooking" default="all">
  
  
  <property file="teamninenewbooking.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.tox/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.commons-dbcp2-2.1.1-javadoc.classpath"/>
  
  <path id="library.commons-dbcp2-2.1.1.classpath">
    <pathelement location="${basedir}/lib/commons-dbcp2-2.1.1.jar"/>
  </path>
  
  <path id="library.commons-logging-1.2.classpath">
    <pathelement location="${basedir}/lib/commons-logging-1.2.jar"/>
  </path>
  
  <path id="library.commons-pool2-2.4.2.classpath">
    <pathelement location="${basedir}/lib/commons-pool2-2.4.2.jar"/>
  </path>
  
  <path id="library.mysql-connector-java-5.1.36.classpath">
    <pathelement location="${basedir}/lib/mysql-connector-java-5.1.36.jar"/>
  </path>
  
  <path id="library.org.jfxtras:jfxtras-agenda:8.0-r4.classpath">
    <pathelement location="${basedir}/lib/jfxtras-agenda-8.0-r4.jar"/>
    <pathelement location="${basedir}/lib/jfxtras-common-8.0-r4.jar"/>
    <pathelement location="${basedir}/lib/jfxtras-controls-8.0-r4.jar"/>
    <pathelement location="${basedir}/lib/jfxtras-fxml-8.0-r4.jar"/>
  </path>
  
  <path id="library.org.jfxtras:jfxtras-controls:8.0-r4.classpath">
    <pathelement location="${basedir}/lib/jfxtras-common-8.0-r4.jar"/>
    <pathelement location="${basedir}/lib/jfxtras-controls-8.0-r4.jar"/>
    <pathelement location="${basedir}/lib/jfxtras-fxml-8.0-r4.jar"/>
  </path>
  
  <path id="library.org.jfxtras:jfxtras-menu:8.0-r4.classpath">
    <pathelement location="${basedir}/lib/jfxtras-common-8.0-r4.jar"/>
    <pathelement location="${basedir}/lib/jfxtras-menu-8.0-r4.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/.idea/module_teamninenewbooking.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.teamninenewbooking, clean.artifact.teamninenewbooking" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.teamninenewbooking" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.teamninenewbooking" value="${basedir}/out/artifacts/TeamNineNewBooking"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.TeamNineNewBooking" value="${artifacts.temp.dir}/TeamNineNewBooking.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.teamninenewbooking" description="clean TeamNineNewBooking artifact output">
    <delete dir="${artifact.output.teamninenewbooking}"/>
  </target>
  
  <target name="artifact.teamninenewbooking" depends="init.artifacts, compile.module.teamninenewbooking" description="Build &#39;TeamNineNewBooking&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.teamninenewbooking}"/>
    <copy todir="${artifact.temp.output.TeamNineNewBooking}">
      <fileset dir="${teamninenewbooking.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_TeamNineNewBooking" dir="${artifact.temp.output.TeamNineNewBooking}" includes="**/*.jar">
      <exclude name="TeamNineNewBooking.jar"/>
    </fx:fileset>
    <fx:fileset id="all_TeamNineNewBooking" dir="${artifact.temp.output.TeamNineNewBooking}" includes="**/*.jar"/>
    <fx:application id="TeamNineNewBooking_id" name="TeamNineNewBooking" mainClass="com.team9.bookingsystem.Ui"/>
    <fx:jar destfile="${artifact.temp.output.TeamNineNewBooking}/TeamNineNewBooking.jar">
      <fx:application refid="TeamNineNewBooking_id"/>
      <fileset dir="${artifact.temp.output.TeamNineNewBooking}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_TeamNineNewBooking"/>
      </fx:resources>
      <manifest/>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.TeamNineNewBooking}/deploy" outfile="TeamNineNewBooking">
      <fx:permissions elevated="true"/>
      <fx:application refid="TeamNineNewBooking_id"/>
      <fx:info title="booking" vendor="booking"/>
      <fx:resources>
        <fx:fileset refid="all_TeamNineNewBooking"/>
      </fx:resources>
    </fx:deploy>
    <property name="artifact.sign.vendor.TeamNineNewBooking" value="CN=booking"/>
    <property name="artifact.sign.alias.TeamNineNewBooking" value="jb"/>
    <property name="artifact.sign.keystore.TeamNineNewBooking" value="${artifact.temp.output.TeamNineNewBooking}/jb-key.jks"/>
    <property name="artifact.sign.storepass.TeamNineNewBooking" value="storepass"/>
    <property name="artifact.sign.keypass.TeamNineNewBooking" value="keypass"/>
    <genkey dname="${artifact.sign.vendor.TeamNineNewBooking}" alias="${artifact.sign.alias.TeamNineNewBooking}" keystore="${artifact.sign.keystore.TeamNineNewBooking}" storepass="${artifact.sign.storepass.TeamNineNewBooking}" keypass="${artifact.sign.keypass.TeamNineNewBooking}"/>
    <signjar alias="${artifact.sign.alias.TeamNineNewBooking}" keystore="${artifact.sign.keystore.TeamNineNewBooking}" storepass="${artifact.sign.storepass.TeamNineNewBooking}" keypass="${artifact.sign.keypass.TeamNineNewBooking}">
      <fileset dir="${artifact.temp.output.TeamNineNewBooking}/deploy">
        <include name="*.jar"/>
      </fileset>
    </signjar>
    <copy todir="${artifact.output.teamninenewbooking}">
      <fileset dir="${artifact.temp.output.TeamNineNewBooking}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.TeamNineNewBooking}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.teamninenewbooking" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>