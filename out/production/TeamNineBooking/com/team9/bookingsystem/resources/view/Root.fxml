<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.Button?>


<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.team9.bookingsystem.Controllers.MainController"
            fx:id="Ui"
            styleClass="root">

    <children>

        <GridPane alignment="CENTER" AnchorPane.rightAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.topAnchor="0.0" fx:id="WelcomeArea" styleClass="welcome-area" gridLinesVisible="true">
            <children>

                <HBox GridPane.columnIndex="0"
                      GridPane.rowIndex="0"
                      GridPane.columnSpan="2"
                      GridPane.rowSpan="1"
                      alignment="CENTER"
                      spacing="10">

                    <Label text="Pick an option" styleClass="login-title"></Label>

                    <GridPane.margin>
                        <Insets bottom="40" top="10" left="10" right="10"/>
                    </GridPane.margin>


                </HBox>

                <HBox  GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="CENTER">

                    <GridPane.margin>
                        <Insets top="10" bottom="10" left="10" right="10"></Insets>
                    </GridPane.margin>
                        <children>
                            <Button styleClass="round-button"
                                    fx:id="roundButtonLeft"
                                    text="Button"
                                    onAction="#showLoginForm"></Button>
                        </children>

                </HBox>

                <HBox  GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER">

                    <GridPane.margin>
                        <Insets top="10" bottom="10" left="10" right="10"></Insets>
                    </GridPane.margin>
                        <children>
                            <Button styleClass="round-button"
                                    fx:id="roundButtonRight"
                                    text="Button"
                                    onAction="#showRegisterForm"></Button>
                        </children>
                </HBox>


            </children>
        </GridPane>


    </children>

    <stylesheets>
        <URL value="@../css/RootStyle.css" />
    </stylesheets>

</AnchorPane>
